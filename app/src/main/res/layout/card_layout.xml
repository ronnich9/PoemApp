<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/author_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poetryName_TextView"
                android:layout_marginLeft="28dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/image_ImageView"
                android:layout_toRightOf="@+id/image_ImageView"
                android:text="Author Name" />

            <ImageView
                android:id="@+id/image_ImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/taras"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/poetryName_TextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/author_textView"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/author_textView"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Hello World!"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"/>

            <ImageView
                android:id="@+id/favor_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/author_textView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:src="@drawable/ic_favorite_black_24dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>